<p id="notice"><%= notice %></p>
<div class="subject-table">
  <h1>Birthdays</h1>

  <table class="subject-table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Birthday</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody class="subject-table">
      <% @subjects.each do |subject| %>
        <% if subject.user_id == @user.id %>
          <tr>
            <td><%= subject.name %></td>
            <td><%= subject.birthday %></td>
            <td><%= link_to 'Show', subject %></td>
            <td><%= link_to 'Edit', edit_subject_path(subject) %></td>
            <td><%= link_to 'Destroy', subject, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Birthday', new_subject_path, class: "btn btn-primary" %>
</div>
