<p id="notice"><%= notice %></p>
<% if @subject.user_id == @user.id %>

<%= link_to 'Back', subjects_path %> | <%= link_to 'Edit', edit_subject_path(@subject) %>
<div class="subject-table">
  <p class="subject-show-page">
    <strong>Name:</strong>
    <%= @subject.name %>
  </p>

  <p class="subject-show-page">
    <strong>Birthday:</strong>
    <%= @subject.birthday %>
  </p>

  <p class="subject-show-page">
    Zodiac:
    <%= @zodiac %>
  </p>

  <p class="subject-show-page">
    Native American zodiac: <%= @native_zodiac %>
  </p>

  <p class="subject-show-page">
    Birthstone: <%= @birthstone %>
  </p>

  <% else %>
    <p class="subject-show-page"> You are not allowed to view this page </p>
  <% end %>
</div>
