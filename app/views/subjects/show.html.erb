<% if @subject.user_id == @user.id %>

<%= link_to 'Back', subjects_path %> | <%= link_to 'Edit', edit_subject_path(@subject) %>
<div class="subject-table">
  <p class="subject-show-page">
    <strong>Name:</strong>
    <%= @subject.name %>
  </p>

  <p class="subject-show-page">
    <strong>Birthday:</strong>
    <%= @subject.birthday %>
  </p>

  <p class="subject-show-page">
    Zodiac:
    <%= @zodiac %>
  </p>
  <% if @zodiac == "Aquarius" %>
    <% @native_zodiac = "The Otter" %>
